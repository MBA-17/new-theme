[
  {
    "name": "theme_info",
    "theme_name": "Skeleton",
    "theme_version": "0.1.0",
    "theme_author": "Sheraz Akram",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo_image",
        "label": "Desktop Logo"
      },
      {
        "type": "image_picker",
        "id": "mobile_logo_image",
        "label": "Mobile Logo"
      },
      {
        "type": "image_picker",
        "id": "dark_logo_image",
        "label": "Dark Mode Logo"
      },
      {
        "type": "range",
        "id": "logo_max_width",
        "label": "Max logo width (PX)",
        "min": 100,
        "max": 200,
        "step": 4,
        "default": 100
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Displayed at 32 x 32px"
      }
    ]
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:general.primary"
      },
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:options.page_width.narrow"
          },
          {
            "value": "100%",
            "label": "t:options.page_width.wide"
          }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "range",
        "id": "corner_radius",
        "min": 0,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "t:labels.corner_radius",
        "default": 4
      }
    ]
  },
  {
    "name": "t:general.card_Grid_Layout",
    "settings": [
      {
        "type": "header",
        "content": "t:general.desktop_Grid"
      },
      {
        "type": "range",
        "id": "grid_cards_columns_desktop",
        "min": 1,
        "max": 4,
        "step": 1,
        "default": 4,
        "label": "t:labels.desktop_Columns"
      },
      {
        "type": "range",
        "id": "grid_cards_max_width_desktop",
        "min": 200,
        "max": 600,
        "step": 10,
        "unit": "px",
        "default": 300,
       "label": "t:labels.max_card_width_desktop"
      },
      {
        "type": "range",
        "id": "grid_cards_columns_tablet",
        "min": 1,
        "max": 3,
        "step": 1,
        "default": 3,
        "label": "t:labels.table_columns"
      },
      {
        "type": "range",
        "id": "grid_cards_max_width_tablet",
        "min": 150,
        "max": 500,
        "step": 10,
        "unit": "px",
        "default": 250,
        "label": "t:labels.max_card_width_tablet"
      },
      {
        "type": "range",
        "id": "grid_cards_columns_mobile",
        "min": 1,
        "max": 3,
        "step": 1,
        "default": 1,
        "label": "t:labels.mobile_columns"
      },
      {
        "type": "range",
        "id": "grid_cards_max_width_mobile",
        "min": 120,
        "max": 400,
        "step": 10,
        "unit": "px",
        "default": 300,
        "label": "t:labels.max_card_width_mobile"
      },
      {
        "type": "range",
        "id": "grid_cards_column_gap",
        "min": 0,
        "max": 50,
        "step": 5,
        "unit": "px",
        "default": 20,
        "label": "t:labels.column_gap"
      },
      {
        "type": "range",
        "id": "grid_cards_row_gap",
        "min": 0,
        "max": 50,
        "step": 5,
        "unit": "px",
        "default": 20,
        "label": "t:labels.row_gap"
      },
      {
        "type": "header",
        "content": "t:general.card_shadow"
      },
      {
        "type": "range",
        "id": "card_shadow_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "t:labels.card_shadow_opacity",
        "default": 10
      },
      {
        "type": "range",
        "id": "card_horizontal_offset",
        "min": -40,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "t:labels.card_shadow_horizontal_offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "card_vertical_offset",
        "min": -40,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "t:labels.card_shadow_vartical_offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "card_shadow_blur",
        "min": 0,
        "max": 40,
        "step": 5,
        "unit": "px",
        "label": "t:labels.card_shadow_blur",
        "default": 0
      }
    ]
  }
]
