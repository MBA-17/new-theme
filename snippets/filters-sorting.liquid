                        <input
                          id="{{ group_id }}-bool-{{ forloop.index }}"
                          type="checkbox"
                          name="{{ filter_value.param_name }}"
                          value="{{ filter_value.value }}"
                          data-filter-url="{{ filter_value.url }}"
