{% comment %}
  Usage:
  {% render 'social-icons', placement: 'footer' %}
  Options:
    - placement (string) adds BEM class: .social-icons--footer
{% endcomment %}

{% liquid
  if settings.show_social_icons != true
    break
  endif

  if settings.social_icon_style == 'brand'
    assign style_class = 'is-brand'
  else
    assign style_class = 'is-mono'
  endif

  assign wrap_class = 'social-icons ' | append: style_class
  if placement != blank
    assign wrap_class = wrap_class | append: ' social-icons--' | append: placement
  endif
%}


<div class="{{ wrap_class }}" role="navigation" aria-label="Social media">
  {% if settings.social_facebook_url != blank %}
