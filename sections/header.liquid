    <div class="logo-wrapper">
      <h1 class="site-title" style="max-width: {{ settings.logo_max_width }}px;">
        <a href="{{ routes.root_url }}" class="site-title__link" style="display:flex; align-items:center;">

          {%- assign display_w = settings.logo_max_width | default: 120 -%}
          {%- assign desktop = settings.logo_image -%}
          {%- assign mobile = settings.mobile_logo_image -%}
          {%- assign dark   = settings.dark_logo_image -%}

          {%- comment -%} determine a default image to compute intrinsic height {%- endcomment -%}
          {%- if desktop != blank -%}
            {%- assign default_img = desktop -%}
          {%- elsif mobile != blank -%}
            {%- assign default_img = mobile -%}
          {%- elsif dark != blank -%}
            {%- assign default_img = dark -%}
          {%- endif -%}

          {%- if default_img != blank and default_img.width and default_img.width > 0 -%}
            {%- assign display_h = default_img.height | times: display_w | divided_by: default_img.width | round -%}
          {%- else -%}
            {%- assign display_h = display_w -%} {%- comment -%} fallback when no dims available {%- endcomment -%}
          {%- endif -%}

          {%- assign w1 = display_w -%}
          {%- assign w2 = display_w | times: 2 -%}

          {%- if default_img != blank -%}
