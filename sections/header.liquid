              <source media="(max-width: 768px)"
                    srcset="{{ mobile | image_url: width: w1 }} 1x, {{ mobile | image_url: width: w2 }} 2x">
            {%- endif -%}

            {%- if desktop != blank -%}
              {%- comment -%} default desktop fallback (also used if above sources don't match) {%- endcomment -%}
              <img
                src="{{ desktop | image_url: width: w1 }}"
                srcset="{{ desktop | image_url: width: w1 }} 1x, {{ desktop | image_url: width: w2 }} 2x"
                class="site-logo"
                alt="{{ shop.name | escape }}"
                width="{{ w1 }}"
                height="{{ display_h }}"
                style="max-width:100%; height:auto;"
                loading="lazy"
              >
            {%- else -%}
              {%- comment -%} if no desktop image but we have mobile/dark {%- endcomment -%}
