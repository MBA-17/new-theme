            {%- if dark != blank -%}
              {%- comment -%} dark mode (mobile and desktop) {%- endcomment -%}
              <source media="(prefers-color-scheme: dark) and (max-width: 768px)"
                      srcset="{{ dark | image_url: width: w1 }} 1x, {{ dark | image_url: width: w2 }} 2x">
              <source media="(prefers-color-scheme: dark)"
                      srcset="{{ dark | image_url: width: w1 }} 1x, {{ dark | image_url: width: w2 }} 2x">
            {%- endif -%}

            {%- if mobile != blank -%}
