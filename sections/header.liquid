      <h1 class="site-title" style="max-width: {{ settings.logo_max_width }}px;">
      <a href="{{ routes.root_url }}" class="site-title__link" style="display: flex; align-items: center;">
    
        {%- if settings.logo_image != blank -%}
          <img
            src="{{ settings.logo_image | image_url: 'medium' }}"
            class="site-logo desktop-logo"
            alt="{{ shop.name | escape }}"
            width="{{ settings.logo_max_width }}"
            height="auto"
            loading="lazy"
          >
        {%- endif -%}

        {%- if settings.mobile_logo_image != blank -%}
          <img
            src="{{ settings.mobile_logo_image | image_url: 'medium' }}"
            class="site-logo mobile-logo"
            alt="{{ shop.name | escape }}"
            width="{{ settings.logo_max_width }}"
            height="auto"
            loading="lazy"
          >
        {%- endif -%}
 
        {%- if settings.dark_logo_image != blank -%}
          <img
            src="{{ settings.dark_logo_image | image_url: 'medium' }}"
            class="site-logo dark-logo"
            alt="{{ shop.name | escape }}"
            width="{{ settings.logo_max_width }}"
            height="auto"
            loading="lazy"
