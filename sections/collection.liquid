{{ 'collection.css' | asset_url | stylesheet_tag }}

<div class="title-header-banner full-width" style="--collection-bg:{{ section.settings.collection_title_bg }};">
  <h1 class="collection-title-head" style="--collection-title-align:{{ section.settings.collection_title_align }};">{{ collection.title }}</h1>
</div>

{%- comment -%} Determine page size from URL or setting {%- endcomment -%}
{% assign current_page_size = section.settings.page_size_default %}

{%- render 'filters-sorting' -%}

<div id="CollectionSection-{{ section.id }}">
  {% paginate collection.products by current_page_size %}
      <div id="CollectionProductGrid-{{ section.id }}" class="collection-products" style="--padding-top:{{ section.settings.padding_top }}px; --padding-bottom:{{ section.settings.padding_bottom }}px;" tabindex="-1">
         {% for product in collection.products %}
            {% render 'Product-card', product: product %}
         {% endfor %}
      </div>
     <div id="CollectionPagination-{{ section.id }}" class="pagination" aria-label="Pagination">
        {% render 'pagination', pagination: paginate %}
     </div>
  {% endpaginate %}
</div>  



{% schema %}
{
  "name": "t:general.collection",
  "settings": [
    {
      "type": "header",
      "content": "t:labels.collection_title"
    },
    {
      "type": "color",
      "id": "collection_title_bg",
      "label": "t:labels.bgColor",
      "default": "#fff"
    },
    {
      "type": "select",
      "id": "collection_title_align",
      "label": "t:labels.alignment",
      "options": [
        {
          "label": "t:options.alignment.left",
          "value": "left"
        },
        {
          "label": "t:options.alignment.center",
          "value": "center"
        },
        {
          "label": "t:options.alignment.right",
          "value": "right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "t:general.collection_card"
    },
    {
      "type": "color",
      "id": "card_product_bg",
      "label": "t:labels.background",
      "default": "#fff"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show product vendor",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_reviews",
      "label": "Show product reviews",
      "default": true
    },
    {
      "type": "header",
      "content": "Filters & Sorting"
    },
    {
      "type": "checkbox",
      "id": "enable_filters",
      "label": "Enable filters (Search & Discovery)",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_sort",
      "label": "Enable sort selector",
      "default": true
    },
    {
      "type": "text",
      "id": "sort_options",
      "label": "Sort options (Label:Value, comma-separated)",
      "default": "Featured:manual, Best selling:best-selling, Price, low to high:price-ascending, Price, high to low:price-descending, Newest:created-descending"
    },
    {
      "type": "number",
      "id": "page_size_default",
      "label": "Default items per page",
      "default": 4
    },
    {
      "type": "header",
      "content": "t:labels.padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 20
    }
  ]
}
{% endschema %}
