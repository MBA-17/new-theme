<div class="search-container" style="--padding-top:{{ section.settings.padding_top }}px; --padding-bottom:{{ section.settings.padding_bottom }}px;">
  <h1 class="search-title">{{ 'search.title' | t }}</h1>

  <div class="search-box">
    <form action="{{ routes.search_url }}" method="get" role="search">
      <input
        type="search"
        size="50"
        class="search-input"
        name="q"
        value="{{ search.terms | escape }}"
        placeholder="{{ 'search.placeholder' | t }}"
      >
      <button type="submit" class="search-btn">{{ 'search.submit' | t }}</button>
    </form>
  </div>
</div>

{% if search.performed %}
  {% if search.results_count == 0 %}
    <p>{{ 'search.no_results_html' | t: terms: search.terms }}</p>
  {% else %}
    <p>{{ 'search.results_for_html' | t: terms: search.terms, count: search.results_count }}</p>

    {% paginate search.results by 20 %}
      <div class="search-results">
      
        {% # Search result items may be an article, a page, or a product. %}
        {% for result in search.results %}
          <div class="search-result">
            {% assign featured_image = result.featured_image | default: result.image %}
            {% if featured_image %}
              {% render 'image', class: 'search-result__image', image: featured_image, url: result.url, width: 400 %}
            {% endif %}
            <div class="search-result__content">
              <p>
                {{ result.title | link_to: result.url }}
                {% if result.price %}
                  {{ result.price | money_with_currency }}
                {% endif %}
              </p>
            </div>
          </div>
        {% endfor %}
      
      </div>

      <div class="pagination">
        {% render 'pagination', pagination: paginate %}
      </div>
    {% endpaginate %}
  {% endif %}
{% endif %}

{% stylesheet %}

/* Container */
.search-container {
  width: 100%;
  margin: 0 auto;
  padding-top: var(--padding-top);
  padding-bottom: var(--padding-bottom);
  text-align: center;
}

.search-title {
  font-size: 2rem;
  padding: 20px 0;
  margin-bottom: 20px;
  color: #222;
}

/* Search box */
.search-box form {
  display: flex;
  justify-content: center;
  gap: 10px;
  max-width: 700px;
  margin: 0 auto 30px;
}

.search-input {
  flex: 1;
  padding: 12px 16px;
  border: 1px solid #ddd;
  border-radius: 6px;
  font-size: 1rem;
}

.search-btn {
  background: #111;
  color: #fff;
  border: none;
  padding: 12px 20px;
  border-radius: 6px;
  cursor: pointer;
  transition: background 0.3s;
}

.search-btn:hover {
  background: #333;
}

/* Results grid */
.search-results {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
  gap: 24px;
}

.search-result {
  background: #fff;
  border: 1px solid #eee;
  border-radius: 12px;
  overflow: hidden;
  transition: box-shadow 0.3s;
}

.search-result:hover {
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
}

.search-result__image img {
  width: 100%;
  height: auto;
  display: block;
}

.search-result__content {
  padding: 16px;
  text-align: left;
}

.result-title a {
  font-size: 1rem;
  font-weight: 600;
  color: #222;
  text-decoration: none;
}

.result-title a:hover {
  color: #0073e6;
}

.result-price {
  margin-top: 8px;
  font-size: 0.9rem;
  color: #666;
}

/* No results */
.no-results {
  text-align: center;
  font-size: 1.1rem;
  color: #555;
  margin-top: 30px;
}

/* Responsive tweaks */
@media (max-width: 768px) {
  .search-box form {
    flex-direction: column;
  }

  .search-btn {
    width: 100%;
  }
}

{% endstylesheet %}

