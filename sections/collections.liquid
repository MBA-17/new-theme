{{ 'collections-list.css' | asset_url | stylesheet_tag }}

<div class="collections-banner full-width" style="--heade-align:{{ section.settings.head_title_alignment }};">
  <h1 class="collections-header">{{ 'collections.title' | t }}</h1>
</div>

<div
  class="collections {{ section.settings.grid_item_width }}"
  style="--grid-gap: {{ section.settings.grid_gap }}px; --padding-top:{{ section.settings.padding_top }}px; --padding-bottom:{{ section.settings.padding_bottom }}px;"
>
  {% for collection in collections %}
    <a class="collection-card" href="{{ collection.url }}" style="--collection-card-bg: {{ section.settings.card_background }};">
      {% if collection.featured_image %}
        {% render 'image',
          class: 'collection-card__image',
          image: collection.featured_image,
          width: 600,
          height: 600,
          crop: 'center'
        %}
      {% else %}
        {{ 'collection-apparel-4' | placeholder_svg_tag: 'collection-card__image' }}
      {% endif %}

      <div class="collection-card__content" style="--card-text-align:{{ section.settings.title_alignment }}">
        <h2 class="collection-title">{{ collection.title }}</h2> 

        {% if collection.description %}
          <p class="des">{{ collection.description | strip_html | truncatewords: 15 }}</p>
        {% endif %}

        <span class="count">{{ collection.all_products_count }} {{ 'collections.general.collection_product_count' | t }}</span>
      </div>
    </a>
  {% endfor %}
</div>



{% schema %}
{
  "name": "t:general.collections_grid",
  "settings": [
    {
      "type": "header",
      "content": "t:labels.collection_title"
    },
    {
      "type": "select",
      "id": "head_title_alignment",
      "label": "t:labels.alignment",
      "options": [
        { "value": "left", "label": "t:options.alignment.left" },
        { "value": "center", "label": "t:options.alignment.center" },
        { "value": "right", "label": "t:options.alignment.right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "t:general.collection_card"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "t:labels.alignment",
      "options": [
        { "value": "left", "label": "t:options.alignment.left" },
        { "value": "center", "label": "t:options.alignment.center" },
        { "value": "right", "label": "t:options.alignment.right" }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "card_background",
      "label": "t:labels.background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "card_hover_color",
      "label": "t:labels.hover_color",
      "default": "#000"
    },
    {
      "type": "header",
      "content": "t:labels.padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 20
    }
  ],
  "presets": [{ "name": "t:general.collections_grid" }]
}
{% endschema %}
